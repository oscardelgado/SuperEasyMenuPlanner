<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuWeekActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/weekDayTV"
        android:layout_gravity="left|top"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/firstCourse"
        android:id="@+id/firstCourseTV"
        android:layout_alignBottom="@+id/weekDayTV"
        android:layout_toRightOf="@+id/weekDayTV"
        android:layout_toEndOf="@+id/weekDayTV"
        android:layout_marginLeft="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/secondCourse"
        android:id="@+id/secondCourseTV"
        android:layout_alignBottom="@+id/firstCourseTV"
        android:layout_toRightOf="@+id/firstCourseTV"
        android:layout_toEndOf="@+id/firstCourseTV"
        android:layout_marginLeft="26dp" />

</RelativeLayout>
